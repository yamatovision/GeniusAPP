# フロントエンド環境変数設定例
# このファイルを .env としてコピーし、適切な値を設定してください

# APIエンドポイント設定
REACT_APP_API_URL=http://localhost:5000/api

# 認証設定
REACT_APP_AUTH_STORAGE_KEY=appgenius_auth
REACT_APP_AUTH_TOKEN_EXPIRY=3600 # 1時間（秒）
REACT_APP_AUTH_REFRESH_EXPIRY=1209600 # 14日（秒）

# UI設定
REACT_APP_IDLE_TIMEOUT=1800 # 30分（秒）
REACT_APP_PAGINATION_LIMIT=10

# アプリケーション情報
REACT_APP_VERSION=0.1.0
REACT_APP_NAME=AppGenius Portal

# 機能フラグ
REACT_APP_ENABLE_ADMIN_FEATURES=true
REACT_APP_ENABLE_USER_REGISTRATION=false
REACT_APP_ENABLE_USAGE_MONITORING=true

# ログ設定
REACT_APP_LOG_LEVEL=info # trace, debug, info, warn, error, fatal